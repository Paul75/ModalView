<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context="com.changjiashuai.demo.MainActivity">


    <Button
        android:id="@+id/btnShowTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="showTop"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnShowCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="showCenter"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnShowBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="showBottom"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnShowChangeBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="showChangeBg"
        android:textAllCaps="false" />
</LinearLayout>
