<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnShowAnnularView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading annular view"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/btnShowBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading bar view"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnShowPieView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading pie view"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnShowSpinView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading spin view"
        android:textAllCaps="false" />
</LinearLayout>
